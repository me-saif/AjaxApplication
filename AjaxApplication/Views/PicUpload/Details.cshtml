@model AjaxApplication.ViewModels.HomeDetailsViewModel

@{
    ViewBag.Title = "Pic Upload Details";
    var photoPath = "~/Images/" + (Model.PicUploadModel.PhotoPath ?? "anonymous.jpg");
}

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.PicUploadModel.Name</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="@photoPath" asp-append-version="true" />

                <h4>Employee ID : @Model.PicUploadModel.Id</h4>
                <h4>Email : @Model.PicUploadModel.Email</h4>
            </div>
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="index"
                   class="btn btn-primary">Back</a>
                <a asp-action="Edit" asp-controller="PicUpload"
                   asp-route-id="@Model.PicUploadModel.Id"
                   class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/CustomScript.js"></script>
}